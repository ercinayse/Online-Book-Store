
@{
    ViewBag.Title = "Kargo Ekle";
}

@using YeniProje.Models
@model List<Kargo>

<div class="row">
    <div class="col-md-12 col-sm-6">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Kargo Ekle
                </div>
                <div class="block-controls">

                    <a href="/Kargo/Index"><span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span></a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Kargo/Ekle" method="post" role="form">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Kargo Adı</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Kargo adı giriniz" name="kargoadi">
                        </div>

                        <div class="form-group">
                            <label class="control-label">Telefon Numarası</label>
                            <div class="input-group">
                                <span class="input-group-addon input-group-icon">
                                    <span class="icon icon-telephone"></span>
                                </span>
                                <input type="text" class="phone form-control" autocomplete="off" name="telno">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Adres</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Adresi giriniz" name="adres">
                        </div>


                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>



